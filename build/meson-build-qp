#!/bin/sh
#
# used by meson to build quantum-proof target

qp_path="${MESON_SOURCE_ROOT}/../lib/pqclean"

echo "-- Building Quantum Proof"
CFLAGS="-I../../src -I. -O2 -fstack-protector-all -D_FORTIFY_SOURCE=2 -fno-strict-overflow -fPIC" \
      make -C ${qp_path}

cp -v ${qp_path}/libqpz.a ${MESON_SOURCE_ROOT}
